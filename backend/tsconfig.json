{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "lib": ["es2018", "esnext.asynciterable"],
      "outDir": "./public",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": [
      "src/**/*"
, "src/api"    ],
    "exclude": [
      "node_modules",
      "dist",
      "tests"
    ]
  }